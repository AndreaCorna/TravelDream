<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <display-name>TravelDreamWeb</display-name>
  <servlet>
    <servlet-name>Faces Servlet</servlet-name>
    <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>Faces Servlet</servlet-name>
    <url-pattern>/faces/*</url-pattern>
  </servlet-mapping>
  <security-constraint>
		<web-resource-collection>
			<web-resource-name>Admins Pages</web-resource-name>
			<description />
			<url-pattern>/admin/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>AMMINISTRATORE</role-name>
		</auth-constraint>
	</security-constraint>
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Users Pages</web-resource-name>
			<description />
			<url-pattern>/user/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>UTENTE</role-name>
			<role-name>DIPENDENTE</role-name>
		</auth-constraint>
	</security-constraint>
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Employees Pages</web-resource-name>
			<description />
			<url-pattern>/employee/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>DIPENDENTE</role-name>
		</auth-constraint>
	</security-constraint>
  <welcome-file-list>
		<welcome-file>home.xhtml</welcome-file>
	</welcome-file-list>
</web-app>